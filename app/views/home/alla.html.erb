<h2>Liting All Anniversaries</h2>

<table class="table">
  <tr>
    <th width="10%">Name</th>
    <th width="10%">Spouse</th>
    <th width="15%">Anniversary</th>
    <th width="20%">Email</th>
    <th width="12%">Phone</th>
    <th width="10%">Status</th>
    
    
   
  </tr>

<% @believers_show.each do |believer| %>
  <tr>
    <td><%= believer.name %></td>
    <td><%= believer.spouse rescue "Not Found"%></td>
    <td><%= believer.anniversary.strftime("%a, %d, %b") rescue "Not Found" %></td>
    <td><%= believer.email %></td>
    <td><%= believer.phone %></td>
    <td><%= believer.status %></td>
    
  </tr>
<% end %>
</table>

